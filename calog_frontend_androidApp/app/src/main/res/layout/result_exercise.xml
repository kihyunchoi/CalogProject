<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/burncalobtm" />
        <TextView
            android:id="@+id/totalUsedCal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumed Calories"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/clock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_access_alarm_black_24dp"/>
        <TextView
            android:id="@+id/resultTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fitness Hours"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stepLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/clock"
            android:src="@drawable/ic_directions_walk_black_24dp" />
        <TextView
            android:id="@+id/totalStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/distanceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:visibility="invisible">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/clock"
            android:src="@drawable/ic_straighten_black_24dp" />
        <TextView
            android:id="@+id/totalDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>