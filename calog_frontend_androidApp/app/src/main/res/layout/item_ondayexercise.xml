<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="50sp"
        android:layout_height="70sp"
        android:src="@drawable/ic_directions_run_black_24dp"
        android:layout_marginRight="10sp"/>
    <TextView
        android:id="@+id/FitnessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:text="FitnessName"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/eachCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kcal"
        android:textColor="#FFFFFF"
        android:layout_below="@id/FitnessName"
        android:layout_toRightOf="@id/image"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/eachTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h"
        android:textColor="#FFFFFF"
        android:layout_below="@id/eachCalorie"
        android:layout_toRightOf="@id/image"
        android:textSize="20sp"/>

</RelativeLayout>